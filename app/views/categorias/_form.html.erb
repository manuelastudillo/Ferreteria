<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for @categoria, url: categorias_path, html: { method: :post } do |f| %>
        <% if @categoria.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@categoria.errors.count, "error") %> prohibido guardar esta categoria:</h4>

            <ul>
            <% @categoria.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <div class="form-group" style="margin-top: 10px;">
        <%= f.label :nom_cat,"Nombre", :class =>"col-sm-2", :class =>"control-label" %>
        <div class="col-sm-10">
        <%= f.text_field :nom_cat, placeholder: "Nombre Del Producto", :class => "form-control" %>
     </div>
     </div>
      <div class="form-group">
        <%= f.label :abre_cat ,"Nombre Abreviado", :class =>"col-sm-2", :class =>"control-label" %>
        <div class="col-sm-10">
        <%= f.text_field :abre_cat,  placeholder: "Nombre Abreviado",:class => "form-control" %>
      </div>
      </div>
    
      <div class="form-group">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</section>
