<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@producto, :html => { :role => "form" }) do |f| %>
        <% if @producto.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@producto.errors.count, "error") %> prohibido guardar este producto:</h4>

            <ul>
            <% @producto.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <div class="form-group">
        <%= f.label :nom_prod, "Nombre" %>
        <%= f.text_field :nom_prod, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :abre_pro %>
        <%= f.text_field :abre_pro, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :marca %>
        <%= f.text_field :marca, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :codigo_barras, "codigo de barra" %>
        <%= f.text_field :codigo_barras , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :comision %>
        <%= f.text_field :comision, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :stock %>
        <%= f.text_field :stock , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :stockminimo %>
        <%= f.text_field :stockminimo , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :precio_compra %>
        <%= f.text_field :precio_compra , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :precio_venta %>
        <%= f.text_field :precio_venta , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :descuento %>
        <%= f.text_field :descuento , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :descripcion %>
        <%= f.text_field :descripcion , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :stock %>
        <%= f.text_field :stock , :class => "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :proveedor_id %>
        <%= f.text_field :proveedor_id , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :categoria_id %>
        <%= f.text_field :categoria_id , :class => "form-control"%>
      </div>

      <div class="form-group">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</section>
